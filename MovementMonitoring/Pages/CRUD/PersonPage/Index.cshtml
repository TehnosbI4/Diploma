@page
@model IndexModel
@{
    ViewData["Title"] = "Персоны";
}

<h1 style="display:flex; justify-content:center;">@ViewData["Title"]</h1>

<div>
    <div style="display:flex; justify-content:center;">
        @if (User.IsInRole("Admin"))
        {
            <a onclick="jQueryModalGet('/CRUD/PersonPage?handler=CreateOrEdit','Добавить персону')" class="btn btn-lg btn_green btn_round">
                Добавить новую персону
            </a>
        }
    </div>
    <div id="viewAll" class="card-body table-responsive"></div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#viewAll').load('?handler=ViewAllPartial');
        });
        CheckUpdate("Person");
    </script>
}